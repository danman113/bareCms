script.
  $(document).ready( function (){
       dynamicForm('#template', function( e, data){
           e.preventDefault();
           console.log(data);
           $.ajax({
              type: 'POST',
              data: data,
              url: '/template/' + data.title,
              success: function(data){
                  if(data.status){
                      alert('Template edited!');
                  } else {
                      alert(data);
                  }
              },
              error: function(err){
                  console.log(err);
              }
          });
       });
  });
form#template(method="POST")
  .form-group
    h3 Title
    input.form-control(type='text' name='title' value='#{editPage.title}')
    h3 Content
    textarea.form-control(name='data' rows='15')= editPage.data
    input.btn.btn-primary(type='submit')


